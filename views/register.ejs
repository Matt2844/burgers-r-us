<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap and jQuery -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
    crossorigin="anonymous"></script>
  <!-- Internal CSS -->
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/register.css">
  <title>Register page</title>
</head>

<body>
  <%- include partials/_nav.ejs %>
  <h2>Create Account</h2>
  <section>
    <form action="/register" method="POST">
      <div class="register-inputs">
        <input name="name" type="text" id="register-name" placeholder="Name">
        <input type="tel" id="phone" name="phone"
       pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
       required>
        <input name="email" type="email" id="register-email" placeholder="Email">
        <input name="password" type="password" id="register-password" placeholder="Password">
        <button type="submit" id="register-submit">Register!</button>
      </div>
    </form>
  </section>

</body>

</html>
