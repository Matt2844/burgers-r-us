<nav class="nav-container">
  <header>
    <div id="logo" href="/">
      <img class="logo-img" src="../docs/burger_logo.png" style="width:70px;height:70px">
      <a href="/"><h1>Burgers-R-Us</h1></a>
    </div>
  </header>

  <div class="list-action">
    <div class="login-link">
    <ul>
      <li id="login">
        <a id="login-trigger" href="#">Log in <span>â–¼</span></a>
        <div id="login-content">
          <form id="login-visible" class="form-control login" action="/login" method="POST">
            <fieldset id="inputs">
              <input class="form-control" name="email" type="email" placeholder="Email Address" required>
              <input class="form-control" name="password" type="password" placeholder="Password" required>
            </fieldset>
            <fieldset id="actions">
              <input type="submit" id="submit" value="Log in">
            </fieldset>
          </form>
        </div>
